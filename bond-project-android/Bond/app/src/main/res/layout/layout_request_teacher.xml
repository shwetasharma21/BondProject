<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/layoutReqNameTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anonymous"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10sp"
        android:textColor="#000000" />
    <Button
        android:id="@+id/layoutReqAcptBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutReqNameTxtView"
        app:layout_constraintLeft_toLeftOf="@id/layoutReqNameTxtView"
        android:text="Accept"
        android:textColor="@color/white"
        android:background="@color/green"
        android:layout_marginTop="5sp"/>
    <Button
        android:id="@+id/layoutReqRjctBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutReqNameTxtView"
        app:layout_constraintLeft_toRightOf ="@id/layoutReqAcptBtn"
        android:layout_marginLeft="10sp"
        android:text="Reject"
        android:layout_marginTop="5sp"
        android:textColor="@color/white"
        android:background="@color/redLight"/>


</androidx.constraintlayout.widget.ConstraintLayout>
