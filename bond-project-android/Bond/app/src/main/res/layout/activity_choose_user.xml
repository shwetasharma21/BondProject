<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseUser">

    <ImageButton
        android:id="@+id/studentImageBtn"
        android:layout_width="180sp"
        android:layout_height="200sp"
        android:src="@drawable/student"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20sp"
        android:scaleType="fitCenter"
        android:onClick="showStudentLogin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student"
        app:layout_constraintTop_toBottomOf="@id/studentImageBtn"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@id/studentImageBtn"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="5sp"/>

    <ImageButton
        android:id="@+id/teacherImageBtn"
        android:layout_width="180sp"
        android:layout_height="200sp"
        android:src="@drawable/teacher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20sp"
        android:scaleType="fitCenter"
        android:onClick="showTeacherLogin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/teacherImageBtn"
        app:layout_constraintRight_toRightOf="@id/teacherImageBtn"
        android:layout_marginRight="30sp"
        android:layout_marginTop="5sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose User"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/studentImageBtn"
        android:layout_marginTop="80sp"
        android:textStyle="bold"
        android:textColor="@color/blue"/>



</androidx.constraintlayout.widget.ConstraintLayout>