<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mask.bond">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".BondScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_bond_screen"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchTeacher" />
        <activity
            android:name=".TeacherHomePage"
            android:label="@string/title_activity_teacher_home_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".IndividualMessage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StudentHomePage"
            android:label="@string/title_activity_student_home_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ChooseUser"/>
        <activity android:name=".LoginScreenTeacher" />
        <activity android:name=".LoginScreenStudent" />
    </application>

</manifest>